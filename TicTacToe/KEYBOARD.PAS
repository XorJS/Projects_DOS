UNIT KEYBOARD;

INTERFACE

PROCEDURE BLOCK_KBD;
{Block Le keyboard}

PROCEDURE UNBLOCK_KBD;
{DeBlock le Keyboard}

IMPLEMENTATION

PROCEDURE BLOCK_KBD;
ASSEMBLER;
ASM
 IN  AL,21H
 OR  AL,00000010b
 OUT 21H,AL
END;

PROCEDURE UNBLOCK_KBD;
ASSEMBLER;
ASM
 IN  AL,21H
 AND AL,11111101b
 OUT 21H,AL
END;

